{
  "name": "omuraisu-library",
  "version": "1.0.0",
  "description": "Robot development C++ library for chassis control, coordinate systems, PID, and DJI motor control",
  "keywords": [
    "robotics",
    "mecanum",
    "pid",
    "dji",
    "c620",
    "m3508",
    "coordinate",
    "controller"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/omuct-robotclub/omuraisu-library.git"
  },
  "authors": [
    {
      "name": "BIT"
    }
  ],
  "license": "MIT",
  "frameworks": ["mbed", "*"],
  "platforms": "*",
  "dependencies": {
    "cobs-serial-manager": {
      "owner": "NekoChan9382",
      "name": "cobs-serial-manager",
      "version": "*"
    }
  },
  "build": {
    "srcDir": "src",
    "includeDir": "src",
    "srcFilter": [
      "+<coordinate/*.cpp>"
    ]
  },
  "headers": [
    "src/chassis/mecanum.hpp",
    "src/coordinate/coordinate.hpp",
    "src/pid/pid.hpp",
    "src/dji/robomas.hpp",
    "src/dji/robomas_core.hpp",
    "src/dji/can_interface.hpp",
    "src/dji/can_mbed.hpp"
  ]
}
